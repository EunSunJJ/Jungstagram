<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sunny.jungstagram.post.repository.PostRepository">

	<select id="selectPost" parameterType="int" resultType="com.sunny.jungstagram.post.domain.Post">
		SELECT
			`id`
			, `userId`
			, `content`
			, `location`
			, `openScope`
			, `imagePath`
			, `createdAt`
			, `updatedAt`		
		FROM
			`post`
		WHERE
			`id` = #{id}
	</select>
	<delete id="deletePost" parameterType="int">
  		DELETE FROM
  			`post`
  		WHERE
  			`id` = #{postId}
	
	</delete>
	
	<insert id="insertPost" parameterType="map">

		INSERT INTO
		`post`
		(
		`userId`
		, `content`
		, `location`
		, `openScope`
		, `imagePath`
		)
		value
		(
		#{userId}
		, #{content}
		, #{location}
		, #{openScope}
		, #{imagePath}
		)

	</insert>

	<select id="selectPostList"
		resultType="com.sunny.jungstagram.post.domain.Post">

		SELECT
		`id`
		, `userId`
		, `content`
		, `location`
		, `openScope`
		, `imagePath`
		, `createdAt`
		, `updatedAt`
		FROM
		`post`
		ORDER BY
		`id` DESC

	</select>

</mapper>